<?xml version="1.0" encoding="UTF-8"?>
<form autocomplete="off" novalidate="novalidate" class="or clearfix" id="kohort_bayi">
    <!--This form was created by transforming a OpenRosa-flavored (X)Form using an XSLT sheet created by Enketo LLC.-->
    <section class="form-logo" />

    <h3 id="form-title">Kohort Bayi Register</h3>

    <label class="question non-select ">
        <span lang="" class="question-label active">Tanggal pendaftaran?
        </span>
        <span class="required">*</span>
        <input autocomplete="off" type="date" name="/kohort_bayi/child_reg_date" required="required"
               data-constraint=".&lt;= /kohort_bayi/today " data-type-xml="date"/>
    </label>

    <label class="question non-select ">
        <span lang="" class="question-label active">Nama Bayi?</span>
        <span class="required">*</span>
        <input type="text" name="/kohort_bayi/child_name" data-type-xml="string" required="required" />
    </label>

    <label class="question non-select ">
        <span lang="" class="question-label active">Tanggal lahir?</span>
        <span class="required">*</span>
        <input type="date" name="/kohort_bayi/child_birth_date" data-type-xml="date" required="required" />
    </label>

    <label class="note non-select ">
        <span lang="" class="question-label active">Umur bayi:
            <span class="or-output" data-value=" /kohort_bayi/child_age ">
            </span>
            bulan
        </span>
        <input autocomplete="off" type="text" name="/kohort_bayi/child_age_note" data-type-xml="string"
               readonly="readonly"/>
    </label>

    <fieldset class="question ">
        <fieldset>
            <legend>
                <span lang="" class="question-label active">Jenis Kelamin?</span>
                <span class="required">*</span>
            </legend>
            <div class="option-wrapper">
                <label class="">
                    <input type="radio" name="/kohort_bayi/child_sex" data-name="/kohort_bayi/child_sex" value="laki" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Laki (L)</span>
                </label>
                <label class="">
                    <input type="radio" name="/kohort_bayi/child_sex" data-name="/kohort_bayi/child_sex" value="perempuan" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Perempuan ( P)</span>
                </label>
            </div>
        </fieldset>
    </fieldset>

    <fieldset class="question ">
        <fieldset>
            <legend>
                <span lang="" class="question-label active">Kepemilikan buku KIA</span>
                <span class="required">*</span>
            </legend>
            <div class="option-wrapper">
                <label class="">
                    <input type="radio" name="/kohort_bayi/kia_book" data-name="/kohort_bayi/kia_book" value="ya" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Ya (+)</span>
                </label>
                <label class="">
                    <input type="radio" name="/kohort_bayi/kia_book" data-name="/kohort_bayi/kia_book" value="tidak" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Tidak (-)</span>
                </label>
            </div>
        </fieldset>
    </fieldset>

    <label class="question non-select ">
        <span lang="" class="question-label active">Berat lahir?</span>
        <span class="required">*</span>
        <input type="number" name="/kohort_bayi/birth_weight" required="required" data-type-xml="int" />
    </label>

    <fieldset class="question ">
        <fieldset>
            <legend>
                <span lang="" class="question-label active">Saat lahir s/d 5 jam / Kondisi bayi</span>
                <span class="required">*</span>
            </legend>
            <div class="option-wrapper">
                <label class="">
                    <input type="radio" name="/kohort_bayi/birth_condition" data-name="/kohort_bayi/birth_condition" value="normal" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Normal (N)</span>
                </label>
                <label class="">
                    <input type="radio" name="/kohort_bayi/birth_condition" data-name="/kohort_bayi/birth_condition" value="komplikasi" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Komplikasi (K)</span>
                </label>
            </div>
        </fieldset>
    </fieldset>

    <fieldset class="question ">
        <fieldset>
            <legend>
                <span lang="" class="question-label active">Saat lahir s/d 5 jam / Jenis pelayanan yang diberikan saat lahir</span>
                <span class="required">*</span>
            </legend>
            <div class="option-wrapper">
                <label class="">
                    <input type="checkbox" name="/kohort_bayi/service_at_birth" value="first_breast_feeding" required="required" data-type-xml="select" />
                    <span lang="" class="option-label active">First Breast feeding (IMD)</span>
                </label>
                <label class="">
                    <input type="checkbox" name="/kohort_bayi/service_at_birth" value="vit-k_injection"  required="required" data-type-xml="select" />
                    <span lang="" class="option-label active">Vit-K Injection (Vit-k)</span>
                </label>
                <label class="">
                    <input type="checkbox" name="/kohort_bayi/service_at_birth" value="salep_mata" required="required" data-type-xml="select" />
                    <span lang="" class="option-label active">Salep Mata</span>
                </label>
            </div>
        </fieldset>
    </fieldset>

    <label class="question non-select ">
        <legend>
            <span lang="" class="question-label active">Saat lahir s/d 5 jam / Meninggal atau tidak?</span>
            <span class="required">*</span>
        </legend>
        <div class="option-wrapper">
                <label class="">
                    <input type="radio" name="/kohort_bayi/dead_or_alive" data-name="/kohort_bayi/dead_or_alive" value="meninggal" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Meninggal</span>
                </label>
                <label class="">
                    <input type="radio" name="/kohort_bayi/dead_or_alive" data-name="/kohort_bayi/dead_or_alive" value="hidup" required="required" data-type-xml="select1" />
                    <span lang="" class="option-label active">Hidup</span>
                </label>
            </div>
    </label>

    <label class="question non-select ">
        <span lang="" class="question-label active">Saat lahir s/d 5 jam / Pemberian Imunisasi HB jika dilakukakan</span>
        <input type="text" name="/kohort_bayi/child_immunization_hb" data-type-xml="string" />
    </label>
    <!--end of group -->

    <fieldset id="or-preload-items" style="display:none;">
        <label class="calculation non-select ">
            <input autocomplete="off" type="hidden" name="/kohort_bayi/today" data-preload="date"
                   data-preload-params="today" data-type-xml="date"/>
        </label>
    </fieldset>

    <fieldset id="or-calculated-items" style="display:none;">
        
        <label class="calculation non-select ">
            <input autocomplete="off" type="hidden" name="/kohort_bayi/mother_name"
                   data-calculate=" /kohort_bayi/case_woman_name " data-type-xml="string"/>
        </label>
        
        <label class="calculation non-select ">
            <input autocomplete="off" type="hidden" name="/kohort_bayi/father_name"
                   data-calculate=" /kohort_bayi/case_husband_name " data-type-xml="string"/>
        </label>

        <label class="calculation non-select ">
            <input autocomplete="off" type="hidden" name="/kohort_bayi/child_age"
                   data-calculate="if( /kohort_bayi/child_birth_date  = '', '', int(( /kohort_bayi/today  -  /kohort_bayi/child_birth_date ) div 30.42))"
                   data-type-xml="string"/>
        </label>

        <label class="calculation non-select ">
            <input type="hidden" name="/kohort_bayi/meta/instanceID" data-calculate="concat('uuid:', uuid())" data-type-xml="string" />
        </label>

        <label class="calculation non-select ">
            <input type="hidden" name="/kohort_bayi/formhub/uuid" data-calculate="'eb18b93f78bc46bd8b7535f627481c22'" data-type-xml="string" />
        </label>
        
    </fieldset>
</form>