<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_item_height"
              android:weightSum="@integer/ec_list_item_weight_count">

    <include layout="@layout/smart_register_client_profile_ki"/>

    <ImageView
            android:layout_width="@dimen/smart_register_client_divider_height"
            android:layout_height="fill_parent"
            android:src="@color/smart_register_client_divider_color"/>

    <org.ei.drishti.view.customControls.CustomFontTextView
        android:id="@+id/no_ibu"
        android:layout_width="@dimen/list_ec_no_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_ec_no_view_weight"
        android:layout_marginTop="10dp"
        style="@style/CustomFontTextViewStyle.ListView.Medium"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <org.ei.drishti.view.customControls.CustomFontTextView
        android:id="@+id/tgl_periksa"
        android:layout_width="@dimen/list_ec_no_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_gplsa_view_weight"
        android:layout_marginTop="10dp"
        style="@style/CustomFontTextViewStyle.ListView.Medium"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <org.ei.drishti.view.customControls.CustomFontTextView
        android:id="@+id/edd"
        android:layout_width="@dimen/list_ec_no_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_gplsa_view_weight"
        android:layout_marginTop="10dp"
        style="@style/CustomFontTextViewStyle.ListView.Medium"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <org.ei.drishti.view.customControls.CustomFontTextView
        android:id="@+id/puskesmas"
        android:layout_width="@dimen/list_ec_no_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_gplsa_view_weight"
        android:layout_marginTop="10dp"
        style="@style/CustomFontTextViewStyle.ListView.Medium"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <include layout="@layout/smart_register_client_status_layout_ki"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/list_edit_icon_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_edit_icon_view_weight"
        android:scaleType="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/edit_button_background"/>


</LinearLayout>